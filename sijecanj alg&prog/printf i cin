#include <iostream>

using namespace std;

int main()
{
    int broj1;
    int broj2;
    int rezultat;
     printf("Unesi prvi broj:");
     cin>>broj1;
     printf("molim unesi drugi broj:");
     cin>>broj2;
     rezultat=broj1+broj2;
     printf("%i + %i = %i, ", broj1, broj2, rezultat);

     rezultat=broj1-broj2;
     printf("%i - %i = %i, ", broj1, broj2, rezultat);

     rezultat=broj1*broj2;
     printf("%i * %i = %i, ", broj1, broj2, rezultat);

    rezultat=broj1/broj2;
    printf("%i / %i = %i, ", broj1, broj2, rezultat);


}
